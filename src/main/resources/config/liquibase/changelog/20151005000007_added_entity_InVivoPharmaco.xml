<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <property name="clobType" value="clob" dbms="postgresql,h2,oracle"/>
    <property name="clobType" value="longtext" dbms="mysql"/>

    <!--
        Added the entity InVivoPharmaco.
    -->
    <changeSet id="20151005000007" author="jhipster">
        <createTable tableName="in_vivo_pharmaco">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="publication_id" type="bigint"/>
            <column name="tested_entity" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="extraction_solvent" type="varchar(255)"/>
            <column name="additive_product" type="varchar(255)"/>
            <column name="compound_name" type="varchar(255)"/>
            <column name="screening_test" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="treatment_route" type="varchar(255)"/>
            <column name="dose" type="decimal(11,4)"/>
            <column name="inhibition" type="decimal(5,2)"/>
            <column name="survival_percent" type="decimal(5,2)"/>
            <column name="survival_time" type="decimal(5,2)"/>
            <column name="ed50" type="decimal(11,4)"/>
            <column name="ld50" type="decimal(11,4)"/>
            <column name="compilers_observations" type="${clobType}"/>
        </createTable>

        <createTable tableName="in_vivo_pharmaco_plant_ingredient">
            <column name="plant_ingredients_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="in_vivo_pharmacos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="in_vivo_pharmacos_id, plant_ingredients_id"
                       tableName="in_vivo_pharmaco_plant_ingredient"/>

        <addForeignKeyConstraint baseColumnNames="in_vivo_pharmacos_id"
                                 baseTableName="in_vivo_pharmaco_plant_ingredient"
                                 constraintName="fk_invivopharmaco_plantingredient_plantingredient_id"
                                 referencedColumnNames="id"
                                 referencedTableName="in_vivo_pharmaco"/>

        <addForeignKeyConstraint baseColumnNames="plant_ingredients_id"
                                 baseTableName="in_vivo_pharmaco_plant_ingredient"
                                 constraintName="fk_plantingredient_plantingredient_invivopharmaco_id"
                                 referencedColumnNames="id"
                                 referencedTableName="plant_ingredient"/>

    </changeSet>
</databaseChangeLog>
